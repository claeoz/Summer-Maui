												</HorizontalStackLayout>
											</Border>
										</DataTemplate>
									</CollectionView.ItemTemplate>
								</CollectionView>
							</toolkit:Expander>
						</VerticalStackLayout>
					</Border>
					
					<!--Wednesday-->
					<Border Grid.Row="2">
						<VerticalStackLayout>
							<Label HorizontalTextAlignment="Center" Padding="0,2" FontSize="40" Background="{StaticResource UniversalSecondaryColor}">
