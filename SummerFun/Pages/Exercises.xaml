<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SummerFun.Pages.Exercises"
             Title="Exercises">
	<Grid RowDefinitions="*,Auto">
		<CollectionView Grid.Row="0" ItemsSource="{Binding Exercises}" SelectionMode="Single" SelectedItem="{Binding SelectedExercise}">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Border Margin="10" Padding="10">
						<VerticalStackLayout>
							<Label Text="{Binding Name}"/>
							<Label Text="{Binding Description}"/>
							<Label Text="{Binding MusclesAsString}"/>
							<Label Text="{Binding EquipmentUsed}"/>
						</VerticalStackLayout>
					</Border>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
		<HorizontalStackLayout Grid.Row="1" Padding="10" Spacing="10">
			<Button Text="Add" Command="{Binding AddExerciseCommand}"/>
			<Button Text="Edit" Command="{Binding EditCommand}"/>
			<Button Text="Delete" Command="{Binding DeleteCommand}"/>
			<Button Text="Reset" Command="{Binding ResetCommand}"/>
		</HorizontalStackLayout>
	</Grid>
</ContentPage>