<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SummerFun.Pages.AddExercisePage"
             Title="AddExercisePage"
			 BackgroundColor="{StaticResource UniversalBackground}">
    <VerticalStackLayout>
		<HorizontalStackLayout>
			<Label Text="Name"/>
			<Entry Text="{Binding Name}"/>
		</HorizontalStackLayout>
		<HorizontalStackLayout>
			<Label Text="Description"/>
			<Editor AutoSize="TextChanges" Text="{Binding Description}" />
		</HorizontalStackLayout>
		<HorizontalStackLayout>
			<Label Text="Equipment"/>
			<Picker SelectedItem="{Binding UsedEquipment}" ItemsSource="{Binding EquipmentOptions}"/>
		</HorizontalStackLayout>
		<VerticalStackLayout>
			<Label Text="Muscles"/>
			<CollectionView ItemsSource="{Binding MusclesOptions}" SelectionMode="Multiple" SelectedItems="{Binding SelectedMuscleObjects}">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Border>
							<Label Text="{Binding .}"/>
						</Border>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</VerticalStackLayout>
		<HorizontalStackLayout>
			<Button Text="Add" Command="{Binding SaveCommand}"/>
			<Button Text="Cancel" Command="{Binding ExitCommand}"/>
		</HorizontalStackLayout>
		<Image Source="magnus.png"></Image>
    </VerticalStackLayout>
</ContentPage>