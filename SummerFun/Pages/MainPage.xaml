<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SummerFun.Pages.MainPage">
	<Grid>
		<Image Source="magnus.png" Aspect="AspectFill" Opacity="0.2" ZIndex="0"/>
		<ScrollView ZIndex="1">
			<VerticalStackLayout
				Padding="30,0"
				Spacing="25">
				<Label>
					Magnus The Swole
				</Label>
				<Image Source="magnus.png"></Image>
				<Border>
					<VerticalStackLayout>
							
						<Label FontSize="40">
							Weather
						</Label>
						<HorizontalStackLayout>
							<Entry Text="{Binding City}"></Entry>
							<Button Text="Change City"/>
						</HorizontalStackLayout>
						<Label Text="{Binding Summary}"/>
					</VerticalStackLayout>
				</Border>
			</VerticalStackLayout>
		</ScrollView>
	</Grid>
</ContentPage>
