<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SummerFun.Pages.OptionsPage"
             Title="OptionsPage">
	<Grid>
		<Image Source="magnus.png" Aspect="AspectFill" Opacity="0.2" ZIndex="0"/>
		<VerticalStackLayout ZIndex="1">
			<Label FontSize="40" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" Background="{StaticResource UniversalSecondaryColor}">
				Options
			</Label>
			<Border>
				<VerticalStackLayout>
					<Border>
						<HorizontalStackLayout Padding="6">
							<Label VerticalTextAlignment="Center">
								Online Mode
							</Label>
							<CheckBox Color="{StaticResource UniversalTextColor}" IsChecked="{Binding Options.OnlineMode}"/>
						</HorizontalStackLayout>
					</Border>
				</VerticalStackLayout>
			</Border>
		</VerticalStackLayout>
	</Grid>
</ContentPage>